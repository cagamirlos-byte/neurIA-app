
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-alpha"
  },
  "include": ["src", "./index.tsx", "./App.tsx", "./types.ts", "./constants.tsx", "./translations.ts", "./services/geminiService.ts", "./components/ToolCard.tsx", "./components/NeurIALogo.tsx"]
}
